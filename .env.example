# Brain-Forge Environment Configuration
# Copy this file to .env and configure for your environment

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false
API_WORKERS=4

# Database Configuration (if needed)
DATABASE_URL=sqlite:///./brain_forge.db
# DATABASE_URL=postgresql://user:password@localhost/brain_forge

# Redis Configuration (for caching and real-time features)
REDIS_URL=redis://localhost:6379/0

# Hardware Configuration
OMP_ENABLED=true
OMP_CHANNELS=306
OMP_SAMPLING_RATE=1000.0
OMP_PORT=/dev/ttyUSB0

KERNEL_ENABLED=true
KERNEL_FLOW_CHANNELS=32
KERNEL_FLUX_CHANNELS=64
KERNEL_SAMPLING_RATE=100.0

ACCEL_ENABLED=true
ACCEL_CHANNELS=3
ACCEL_SAMPLING_RATE=1000.0

# Processing Configuration
FILTER_LOW=1.0
FILTER_HIGH=100.0
COMPRESSION_ENABLED=true
COMPRESSION_RATIO=5.0
ARTIFACT_REMOVAL_ENABLED=true

# GPU Configuration
GPU_ENABLED=true
GPU_DEVICE=cuda:0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/brain_forge.log
LOG_MAX_SIZE=100MB

# Data Storage
DATA_DIRECTORY=data/
TEMP_DIRECTORY=temp/
RESULTS_DIRECTORY=results/

# Security (for production)
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
API_KEY_LIFETIME_HOURS=24

# External Services
ENABLE_MONITORING=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development Settings
DEVELOPMENT_MODE=true
ENABLE_CORS=true
ENABLE_API_DOCS=true

# Hardware Simulation (for development without physical hardware)
SIMULATE_HARDWARE=true
MOCK_DATA_ENABLED=true

# Performance Settings
MAX_MEMORY_USAGE=16GB
PROCESSING_THREADS=4
BUFFER_SIZE=1000
PROCESSING_LATENCY_TARGET=0.001

# WebSocket Configuration
WS_MAX_CONNECTIONS=200
WS_HEARTBEAT_INTERVAL=30
WS_MESSAGE_MAX_SIZE=1048576
